<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="50dp"
    android:background="@drawable/rounded_rect"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/mp_nameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="15"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="3dp"

            android:text="Title"
            android:textSize="35dp"

            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        >
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/startDateTextView"
            android:text="Start time"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#1a459522"
            android:gravity="center"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15dp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:id="@+id/to_mealplan"
            android:text="  to  "
            android:layout_gravity="center"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/endDateTextView"
            android:text="End date"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#1aA704FD"
            android:gravity="center"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"

            android:textSize="15dp" />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/nIngredients"
            android:text="N Ingredients"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#1a036ED9"
            android:gravity="center"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15dp" />

        <Space
            android:layout_width="35dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/nRecipes"
            android:text="N Recipes"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#1a036ED9"
            android:gravity="center"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>
